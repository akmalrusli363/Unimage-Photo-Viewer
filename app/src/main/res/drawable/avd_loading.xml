<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="path"
            android:width="64dp"
            android:height="64dp"
            android:viewportWidth="100"
            android:viewportHeight="100">
            <group
                android:name="spinner"
                android:pivotX="50.0"
                android:pivotY="50.0">
                <path
                    android:name="ring"
                    android:fillColor="#009ef7"
                    android:pathData="M50,50m-35,0a35,35 0,1 1,70 0a35,35 0,1 1,-70 0" />
                <path
                    android:name="dot"
                    android:fillColor="#ffffff"
                    android:pathData="M50,30.4m-10.5,0a10.5,10.5 0,1 1,21 0a10.5,10.5 0,1 1,-21 0" />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="spinner">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:interpolator="@android:interpolator/linear"
                android:propertyName="rotation"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:valueFrom="0"
                android:valueTo="360" />
        </aapt:attr>
    </target>
</animated-vector>
